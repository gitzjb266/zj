<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.more.transformation.dao.TDataserviceConfigDao">

    <resultMap type="com.more.transformation.entity.TDataserviceConfig" id="TDataserviceConfigMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="serviceName" column="service_name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TDataserviceConfigMap">
        select id,
               service_name,
               type,
               create_time,
               update_time
        from auto_cloud.t_dataservice_config
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TDataserviceConfigMap">
        select id,
               service_name,
               type,
               create_time,
               update_time
        from auto_cloud.t_dataservice_config limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TDataserviceConfigMap">
        select
        id, service_name, type, create_time, update_time
        from auto_cloud.t_dataservice_config
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="serviceName != null and serviceName != ''">
                and service_name = #{serviceName}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into auto_cloud.t_dataservice_config(service_name, type, create_time, update_time)
        values (#{serviceName}, #{type}, #{createTime}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update auto_cloud.t_dataservice_config
        <set>
            <if test="serviceName != null and serviceName != ''">
                service_name = #{serviceName},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from auto_cloud.t_dataservice_config
        where id = #{id}
    </delete>

</mapper>
